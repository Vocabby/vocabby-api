{
	"extends": "tslint:recommended",
	"rules": {
		"indent": [true, "spaces", 2],
		"quotemark": [
			true,
			"single",
			"avoid-escape"
		],
		"semicolon": [
			true,
			"never"
		],
		"arrow-parens": [
			true,
			"ban-single-arg-parens"
		],
		"no-unused-variable": true,
    "no-unused-expression": true,
    "object-literal-sort-keys": false
	}
}
